{
	"extends": "airbnb-base",
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly",		
		"document": true,
		"window": true,
		"Shopify": true,
		"theme": true
	},
	"rules": {
		"eol-last": 0,
		"no-plusplus": "off",
		"no-var": 0,
		"indent": ["error", 2, { "SwitchCase": 1 }],	
		"import/no-unresolved": 0,
		"comma-dangle": ["error", "never"],
		"object-shorthand": ["error", "always", { "avoidQuotes": true }]
	}
}